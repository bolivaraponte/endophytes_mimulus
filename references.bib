@article{holeski2010,
  title = {The Genetics of Phenotypic Plasticity in Plant Defense: {{Trichome}} Production in {{Mimulus}} Guttatus},
  author = {Holeski, Liza M and Chase-Alone, Ronnette and Kelly, John K},
  date = {2010},
  journaltitle = {American Naturalist},
  volume = {175},
