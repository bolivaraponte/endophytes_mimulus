@article{kazenel2019,
  title = {Altitudinal Gradients Fail to Predict Fungal Symbiont Responses to Warming.},
  author = {Kazenel, Melanie R. and Kivlin, Stephanie N. and Taylor, D. Lee and Lynn, Joshua S. and Rudgers, Jennifer A.},
  date = {2019-08-01},
