@article{ferris2015,
  title = {Leaf Shape Evolution Has a Similar Genetic Architecture in Three Edaphic Specialists within the {{Mimulus}} Guttatus Species Complex},
  author = {Ferris, Kathleen G. and Rushton, Tullia and Greenlee, Anna B. and Toll, Katherine and Blackman, Benjamin K. and Willis, John H.},
